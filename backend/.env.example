# Example environment variables for local development
# Copy this file to .env and update the values for your environment.

# PostgreSQL (used by docker-compose to initialize the DB)
POSTGRES_DB=bookdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Backend connection (the Spring Boot app reads these to build the JDBC URL)
DB_HOST=db
DB_PORT=5432
DB_NAME=bookdb
DB_USER=postgres
DB_PASSWORD=postgres

# App configuration
APP_PORT=8080
SPRING_PROFILES_ACTIVE=docker

# Frontend (Next.js) - public environment variables must be prefixed with NEXT_PUBLIC_
NEXT_PUBLIC_API_URL=http://localhost:8080/api
BOOK_PDF_PATH=backend/books/book.pdf
OPENAI_API_KEY=your_openai_api_key_here